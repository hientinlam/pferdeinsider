    <button  style="padding:5px;color:#FFFFFF;background:#333333;width:150px;" type="button" class="button" title="<?php echo $this->__('weiter Einkaufen') ?>" onclick="window.location='<?php echo $this->getUrl() ?>'"><span><span><?php echo $this->__('weiter Einkaufen') ?></span></span></button>
